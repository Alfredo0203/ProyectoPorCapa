@using DAL.Models
@model List<DetalleVentas>




@{
    ViewBag.Title = "MostrarProductos";
    var ventas = ViewBag.Ventas;

}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <center>
                <h1>Listado de productos</h1>
            </center>
            <br />
            <button class="btn btn-default"
                    onclick="window.location.href = '/Productos/AgregarProductos'">
                Agregar Producto
            </button>
            <br />
            <table class="table table-hover">
                <thead>
                    <tr>
                       
                      
                    </tr>
                </thead>
                <tbody>
                    @if (ventas != null)
                    {
                        foreach (var ven in ventas)
                        {
                            <tr style="padding: 0; margin:0; background-color: cornflowerblue">
                               
                                <td>@ven.IdVenta</td>
                                <td><h4>$ @ven.Total</h4></td>
                   
                                <td>

                                    <table class="table table-hover" style="padding: 0; margin:0; border: solid 2px black">
                                        <thead style="background-color: darkgray; padding: 0; margin: 0; border: solid 2px black">
                                            <tr style="border: solid 2px black; text-align: center">

                                                <th>Nombre</th>

                                                <th>Precio Venta</th>

                                                <th >Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody >
                                            @if (Model.Count() > 0)
                                            {
                                                foreach (var prod in Model)
                                                {
                                                    if (prod.IdVenta == ven.IdVenta)
                                                    {
                                            <tr style="border: solid 2px black; text-align: center">

                                                <td>@prod.NombreProducto</td>
                                                <td>@prod.Cantidad</td>
                                                <td>

                                                    <button class="btn btn-danger"
                                                            onclick="window.location.href='/Productos/EliminarProducto?idProd='+@prod.IdProducto">
                                                        Eliminar
                                                    </button>
                                                </td>
                                            </tr>
                                                    }
                                                }
                                            }

                                        </tbody>
                                    </table>

                                </td>
                            </tr>
                        }
                    }
                   
                </tbody>
            </table>


                </div>
            </div>
        </div>
