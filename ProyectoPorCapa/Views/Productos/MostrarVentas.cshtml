@using DAL.Models
@model List<DetalleVentas>




@{
    ViewBag.Title = "MostrarProductos";
    var ventas = ViewBag.Ventas;

}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <center>
                <h1>Listado de productos</h1>
            </center>
            <br />
            <button class="btn btn-default"
                    onclick="window.location.href = '/Productos/AgregarProductos'">
                Agregar Producto
            </button>
            <br />
            <table class="table table-hover">
                <thead>
                    <tr>
                       
                        <th>Nombre</th>
                       
                        <th>Cantidad</th>
                     
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ventas != null)
                    {
                        foreach (var ven in ventas)
                        {
                            <tr>
                               
                                <td>@ven.IdVenta</td>
                                <td>@ven.Total</td>
                   
                                <td>

                                    <table class="table table-hover">
                                        <thead>
                                            <tr>

                                                <th>Nombre</th>

                                                <th>Cantidad</th>

                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Count() > 0)
                                            {
                                                foreach (var prod in Model)
                                                {
                                                    if (prod.IdVenta == ven.IdVenta)
                                                    {
                                                    <tr>

                                                        <td>@prod.NombreProducto</td>
                                                        <td>@prod.Cantidad</td>

                                                        <td>
                                                            
                                                            <button class="btn btn-danger"
                                                                    onclick="window.location.href='/Productos/EliminarProducto?idProd='+@prod.IdProducto">
                                                                Eliminar
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    }
                                                }
                                            }

                                        </tbody>
                                    </table>

                                </td>
                            </tr>
                        }
                    }
                   
                </tbody>
            </table>


                </div>
            </div>
        </div>
